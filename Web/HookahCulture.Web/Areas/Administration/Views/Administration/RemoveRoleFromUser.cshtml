@model HookahCulture.Web.ViewModels.Administration.RemoveRoleFromUserViewModel

@{
    this.ViewBag.Title = "Remove Role From User!";
}

<h1>Remove Role From User!</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <button class="btn btn-primary">Remove Role From User</button>
        </form>
    </div>
</div>

<div class="alert alert-danger" role="alert">Roles List:</div>
@foreach (var role in Model.Roles)
{
    <div class="alert alert-info" role="alert">
        <p>Role Name: @role.Name</p>
        <p>Role Id: @role.Id</p>
    </div>
}

<div class="alert alert-danger" role="alert">User's Info:</div>
@foreach (var user in Model.Users)
{
    <div class="alert alert-info" role="alert">
        <p>Email: @user.Email</p>
        <p>UserId: @user.Id</p>
        <p>Current Roles: @String.Join(", ", user.Roles.Select(r => r.RoleId).ToList())</p>
    </div>
}
